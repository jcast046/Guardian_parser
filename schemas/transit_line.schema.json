{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/transit_line.schema.json",
  "title": "Virginia Transit Line",
  "description": "Schema for transit lines (rail, metro, bus routes) in Virginia. Geometry is GeoJSON LineString or MultiLineString (WGS84 lon,lat).",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "description": "Unique identifier for this transit line (UUID).",
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "description": "Official name of the transit line.",
      "type": "string"
    },
    "type": {
      "description": "Type of transit line.",
      "type": "string",
      "enum": ["rail", "subway", "light_rail", "tram", "bus", "ferry", "cable_car", "funicular", "monorail", "trolleybus"]
    },
    "operator": {
      "description": "Transit agency or operator.",
      "type": ["string", "null"]
    },
    "network": {
      "description": "Transit network or system name.",
      "type": ["string", "null"]
    },
    "routeNumber": {
      "description": "Route number or identifier.",
      "type": ["string", "null"]
    },
    "color": {
      "description": "Official line color (hex code).",
      "type": ["string", "null"],
      "pattern": "^#[0-9A-Fa-f]{6}$"
    },
    "geometry": {
      "description": "GeoJSON LineString or MultiLineString in WGS84 (lon,lat).",
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": { "const": "LineString" },
            "coordinates": {
              "type": "array",
              "minItems": 2,
              "items": { "$ref": "#/$defs/position" }
            },
            "bbox": {
              "type": "array",
              "items": {"type": "number"},
              "minItems": 4,
              "maxItems": 6
            }
          },
          "required": ["type", "coordinates"]
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": { "const": "MultiLineString" },
            "coordinates": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "array",
                "minItems": 2,
                "items": { "$ref": "#/$defs/position" }
              }
            },
            "bbox": {
              "type": "array",
              "items": {"type": "number"},
              "minItems": 4,
              "maxItems": 6
            }
          },
          "required": ["type", "coordinates"]
        }
      ]
    },
    "lengthMiles": {
      "description": "Line length in miles (optional).",
      "type": ["number", "null"],
      "minimum": 0
    },
    "stops": {
      "description": "List of stop IDs along this line.",
      "type": "array",
      "items": {"type": "string", "format": "uuid"},
      "uniqueItems": true
    },
    "gtfsMapping": {
      "description": "GTFS mapping fields for agency feed interchange.",
      "type": ["object", "null"],
      "additionalProperties": false,
      "properties": {
        "routeShortName": {"type": ["string", "null"]},
        "routeLongName": {"type": ["string", "null"]},
        "gtfsRouteType": {"type": ["integer", "null"], "minimum": 0, "maximum": 11},
        "textColor": {"type": ["string", "null"], "pattern": "^#[0-9A-Fa-f]{6}$"}
      }
    },
    "servicePatterns": {
      "description": "Service patterns and frequencies.",
      "type": ["object", "null"],
      "additionalProperties": false,
      "properties": {
        "frequency": {
          "description": "Service frequency in minutes.",
          "type": ["number", "null"],
          "minimum": 0
        },
        "operatingHours": {
          "description": "Operating hours (e.g., '5:00 AM - 11:00 PM').",
          "type": ["string", "null"]
        },
        "daysOfService": {
          "description": "Days of the week when service operates.",
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]
          }
        }
      }
    },
    "admin": {
      "description": "Administrative placement for scoring/joins.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "region": {
          "type": "string",
          "enum": ["Northern Virginia", "Central Virginia", "Tidewater", "Southwest", "Valley", "Western Virginia", "Northern Neck", "Southside", "Unknown"],
          "default": "Unknown"
        },
        "regionTagRL": {
          "type": "string",
          "description": "Exact RL region tag expected by the agent.",
          "enum": ["NoVA", "Tidewater", "Shenandoah", "Appalachia", "Piedmont", "Unknown"],
          "default": "Unknown"
        },
        "countyFips": {"type": ["string", "null"]},
        "placeFips": {"type": ["string", "null"]},
        "inState": {
          "type": "boolean",
          "description": "Convenience flag for RL penalties/filters; should be true for VA lines.",
          "default": true
        }
      }
    },
    "accessibility": {
      "description": "Accessibility features.",
      "type": ["object", "null"],
      "additionalProperties": false,
      "properties": {
        "wheelchairAccessible": {"type": ["boolean", "null"]},
        "audioAnnouncements": {"type": ["boolean", "null"]},
        "visualAnnouncements": {"type": ["boolean", "null"]},
        "elevatorAccess": {"type": ["boolean", "null"]}
      }
    },
    "provenance": {
      "description": "Extraction metadata.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "source": {"type": "string", "default": "OpenStreetMap via OSMnx"},
        "sourceDoc": {"type": ["string", "null"]},
        "parserVersion": {"type": ["string", "null"]},
        "extractedAt": {"type": ["string", "null"], "format": "date-time"},
        "confidence": {"type": ["number", "null"], "minimum": 0, "maximum": 1},
        "datasetVersion": {"type": ["string", "null"]}
      }
    }
  },
  "required": ["id", "name", "type", "geometry"],
  "$defs": {
    "position": {
      "type": "array",
      "prefixItems": [
        { "type": "number", "minimum": -180, "maximum": 180 },
        { "type": "number", "minimum": -90, "maximum": 90 }
      ],
      "minItems": 2,
      "maxItems": 3
    }
  }
}